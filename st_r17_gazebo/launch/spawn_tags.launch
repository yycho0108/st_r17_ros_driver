<launch>
    <!--
    <param name="apriltags_description"
        textfile="$(find st_r17_gazebo)/models/apriltags/model.sdf" />
    -->
    <param name="a_0_description"
        command="$(find xacro)/xacro '$(find st_r17_gazebo)/models/model.xacro' tag_id:=0 --inorder"/>
    <param name="a_1_description"
        command="$(find xacro)/xacro '$(find st_r17_gazebo)/models/model.xacro' tag_id:=1 --inorder"/>
    <param name="a_2_description"
        command="$(find xacro)/xacro '$(find st_r17_gazebo)/models/model.xacro' tag_id:=2 --inorder"/>
    <param name="a_3_description"
        command="$(find xacro)/xacro '$(find st_r17_gazebo)/models/model.xacro' tag_id:=3 --inorder"/>

    <node name="spawn_0" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model a_0 -param a_0_description -x 1.3 -y 0.2 -z 0.5" />
    <node name="spawn_1" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model a_1 -param a_1_description  -x 1.5 -y 1.3 -z 0.5" />
    <node name="spawn_2" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model a_2 -param a_2_description -x 2.4 -y 0.4 -z 0.5" />
    <node name="spawn_3" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model a_3 -param a_3_description -x 0.5 -y 2.5 -z 0.5" />

</launch>
